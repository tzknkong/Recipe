<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="198dp"
    android:minHeight="192dp"
    android:listSelector="@drawable/selector_clickable_item_bg_inverse">

    <ImageView
        android:id="@+id/recipe_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/recipe_list_item_image_description"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recipe_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="140dp"
        android:background="#88AC9797"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/recipe_list_item_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.cardview.widget.CardView>
