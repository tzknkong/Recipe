<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAppearance="@style/Headline"
            android:fontFamily="sans-serif-light"
            android:text="Instruction" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?attr/dividerHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/time_image"
                    android:layout_width="63dp"
                    android:layout_height="57dp"
                    android:layout_marginHorizontal="100dp"

                    android:background="@drawable/baketime"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/instruction_time"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="88dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/speech_image"
                android:layout_width="35dp"
                android:layout_height="28dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/speech1"
                android:gravity="center" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?attr/dividerHorizontal" />
        <TextView
            android:id="@+id/recipe_detail_instruction_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:textSize="14sp"
            android:textColor="#8a000000" />




    </LinearLayout>
</androidx.cardview.widget.CardView>