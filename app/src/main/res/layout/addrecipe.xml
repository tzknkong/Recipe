<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/iv_foodImage"
            android:src="@drawable/placeholder"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DessertName"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/recipe_name"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/recipe_category"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/recipe_time"
            />

        <EditText
            android:id="@+id/recipe_ingredients_txt"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginTop="20dp"
            android:hint="ingredients"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/recipe_instruction_txt"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:layout_marginTop="10dp"
            android:hint="Description"
            android:textSize="19sp" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Select Image"
            android:textSize="22sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#ffffff"
            android:onClick="btnSelectImage"
            />
        <Button
            android:id="@+id/btn_uploadR"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Upload Recipe"
            android:textSize="22sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#ffffff"

            />

    </LinearLayout>

</ScrollView>